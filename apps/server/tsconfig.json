{
  "extends": "@chainfall/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
